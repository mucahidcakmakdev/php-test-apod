{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


{% block body %}
    <header style="text-align: right">
        <b>{{ user.email }}</b>
        <a href="{{ path('logout') }}">logout</a>
    </header>
    <div style="text-align: center;min-height: 200px">

        <h1>Picture of the day by the Nasa</h1>
        {% if media %}
            <h2>{{ media.title }}
            </h2>
            <b>Date: {{ media.date | date('d/m/Y') }}</b>
            <br/>
            <img src="{{ media.url }}" alt="{{ media.title }}">
            <p>{{ media.explanation ?? '' }}</p>
        {% endif %}
    </div>
{% endblock %}
